<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context="com.example.klaudia.shoppinglist.ListAddActivity">

    <TextView
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Type name for new list"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/addListUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/productList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/userText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/previous"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20sp"
            android:layout_weight="0.5"
            android:backgroundTint="#990033"
            android:drawableEnd="@drawable/ic_arrow_back_black_24dp"
            android:text="@string/previous"
            android:textColor="#000"
            android:textSize="20sp"
            android:visibility="gone"
            app:roundedCorners="true"
            app:showOutline="true" />


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/addlistName"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            android:backgroundTint="#990033"
            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
            android:enabled="false"
            android:paddingRight="20dp"
            android:text="@string/next"
            android:textColor="#000"
            android:textSize="20sp"
            app:roundedCorners="true"
            app:showOutline="true" />
    </LinearLayout>


</LinearLayout>
